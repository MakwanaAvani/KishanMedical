            <h4 class="shadow3">
                Home</h4>
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" runat="Server">
    <center>
        <asp:LinkButton ID="addHome" runat="server" OnClick="addHome_Click"><h3>Add Home</h3></asp:LinkButton>
        <br />
        <%-- <asp:GridView ID="H_GridView" runat="server" AutoGenerateColumns="False" AutoGenerateDeleteButton="True"
